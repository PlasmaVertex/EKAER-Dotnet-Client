<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ApplicationIcon />
    <StartupObject />
    <Authors>Németh Péter</Authors>
    <Product>Client libary for the hungarian EKAER API</Product>
    <Description>This is an unofficial .NET standard client library for the hungarian ekaer API interface. With this library you can:

Create trade cards
List your trade cards
Modify your trade cards
Delete your trade cards
Finalize your trade cards</Description>
    <Copyright>Németh Péter</Copyright>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company />
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Pethical/EKAER-Dotnet-Client</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Pethical/EKAER-Dotnet-Client</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>EKAER, API</PackageTags>
    <PackageIconUrl>https://pethical.hu/lorry-icon.png</PackageIconUrl>
    <SignAssembly>false</SignAssembly>
    <AssemblyOriginatorKeyFile>exported.pfx</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
    <Version>1.2.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>
</Project>
